<body>
<h1>Books</h1>
<table>
<tbody>
   <th>Title</th>
   <th>Body</th>
   <tr><% @books.each do |book| %></tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", book_path(book.id) %></td>
     <td><%= link_to "Edit", edit_book_path(book.id) %></td>
     <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
   <% end %>
</tbody>
</table>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
   <label>Title</label>
   <div><%= f.text_field :title %></div>
  
   <label>Body</label>
   <div><%= f.text_area :body %></div>
  
   <div><%= f.submit 'Create Book' %></div>
<% end %>
</body>